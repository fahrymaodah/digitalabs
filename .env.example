# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME="Digital Academy"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Jakarta
APP_URL=http://localhost
APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

# ============================================
# CACHE CONFIGURATION
# ============================================
CACHE_STORE=redis
CACHE_PREFIX=

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================
# QUEUE CONFIGURATION
# ============================================
QUEUE_CONNECTION=redis

# ============================================
# FILESYSTEM CONFIGURATION
# ============================================
FILESYSTEM_DISK=public

# ============================================
# SESSION CONFIGURATION
# ============================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================
# MAIL CONFIGURATION
# ============================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your-email@gmail.com
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# GOOGLE OAUTH CONFIGURATION
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"

# ============================================
# GOOGLE ANALYTICS CONFIGURATION
# ============================================
ANALYTICS_PROPERTY_ID=your-property-id
ANALYTICS_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================
# DUITKU PAYMENT GATEWAY
# ============================================
DUITKU_MERCHANT_CODE=your-merchant-code
DUITKU_API_KEY=your-api-key
DUITKU_CALLBACK_URL="${APP_URL}/payment/callback"
DUITKU_RETURN_URL="${APP_URL}/payment/return"
DUITKU_SANDBOX=true

# ============================================
# VITE CONFIGURATION
# ============================================
VITE_APP_NAME="${APP_NAME}"
